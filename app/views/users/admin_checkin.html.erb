<h1>Admin Check-In</h1>

<%= form_with url: admin_checkin_path, method: :post, local: true do |f| %>
    <div class="form-group">
      <%= f.label :first_name, 'First Name' %>
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label :last_name, 'Last Name' %>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label :email, 'Email' %>
      <%= f.text_field :email, class: 'form-control' %>
    </div>

    <div class="form-group">
    <%= f.label :event_id, 'Select Event' %>
    <%= f.collection_select :event_id, Event.all, :id, :name, { prompt: 'Select an Event' }, { class: 'form-control' } %>
  </div>
  
    <%= f.submit 'Check-In', class: 'btn btn-primary' %>
  <% end %>