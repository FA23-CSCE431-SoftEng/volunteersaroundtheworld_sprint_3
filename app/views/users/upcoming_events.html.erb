<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="<%= asset_path('upcoming_events.css') %>">
    <link rel="stylesheet" type="text/css" href="<%= asset_path('user_dash.css') %>">
    <link rel="stylesheet" type="text/css" href="<%= asset_path('flash_alert.css') %>">
    <title>Upcoming Events</title>
</head>
<body>
<% if flash[:alert].present? %>
            <div class="alert alert-alert">
                <%= flash[:alert] %>
            </div>
        <% end %>
    <header>
    <img src="<%= asset_path('IMG_6562.png') %>" alt="logo" class="logo">
<p class="title">Volunteers Around the World</p>
        <div class="container">

            <nav>
                <ul>
                    <li><a href="<%= user_dashboard_path %>">Home</a></li>
                    <li><a href="<%= events_attended_path %>">Events Attended</a></li>
                    <li><a href="<%= user_checkin_path %>">Check In</a></li>
                </ul>
            </nav>
            <%= link_to "Log Out", logout_path, class: "logout-button" %>

        </div>
    </header>
    <div class="section">
        <h2>Upcoming Events</h2>
        <div class="scrollable-container">
            <div class="event-list">
                <% if @events.present? %>
                    <% @events.each do |event| %> 
                        <div class="event-item">
                            <div class="event-info">
                                <span>Event Name: <%= event.name %></span>
                                <span>Date: <%= event.date.present? ? event.date.strftime('%m/%d/%y') : "Date not set" %></span>
                            </div>
                        </div>
                    <% end %>
                <% else %>
                    <p>No upcoming events.</p>
                <% end %>
            </div>
        </div>
    </div>
</body>

</html>
