<!-- app/views/users/home.html.erb -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to Volunteers Around The World</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #500000;
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
            align-items: center;
            justify-content: center;
        }
        .logo {
            width: 20vw; /* This will set the width to 20% of the viewport width */
            height: auto;
            margin-bottom: 20px;
        }
        .container {
            background-color: #fff;
            padding: 30px;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        h1 {
            margin-bottom: 20px;
        }

        a {
            display: inline-block;
            margin: 10px;
            padding: 10px 20px;
            text-decoration: none;
            color: #fff;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        a.user-login {
            background-color: #5a9bec;
        }

        a:hover {
            filter: brightness(90%);
        }

    
    </style>
</head>
<body>
    <div class="container">
        <img src="<%= asset_path 'IMG_6562.png' %>" alt="Volunteers Around The World Logo" class="logo">

        <h1>Welcome to Volunteers Around The World</h1>
        <%= link_to "Log in", new_user_session_path, class: "user-login" %>
    </div>
</body>
</html>
